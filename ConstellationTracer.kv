#:kivy 1.7.2

<MainLayout>:
	size_hint: 1, 1
	anchor_x: 'center'
	anchor_y: 'top'
	canvas:
		Color:
			rgba: 0, 0, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos
	Constellation:
		size_hint: None, None
		size: min(root.size[0], root.size[1]), min(root.size[0], root.size[1])

<Star>:
	size_hint: None, None
	size: 18, 18
	pos_hint: {'center_x':self.offset_x, 'center_y':self.offset_y}
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Ellipse:
			size: self.size
			pos: self.pos

<Connection>:
	canvas:
		Color:
			rgba: 0, 0, .3, 1
		Line:
			width: 8
			points: self.points
		Color:
			rgba: 1, 1, 1, 1
		Line:
			width: 1.2
			points: self.points